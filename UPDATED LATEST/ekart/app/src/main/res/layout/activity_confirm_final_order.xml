<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F8F1"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Please provide your details"
        android:textAlignment="center"
        android:textColor="#272f40"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/shippment_name"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_below="@+id/txt"

        android:layout_marginTop="5dp"
        android:background="@drawable/login_email_pass_bag"
        android:fontFamily="@font/outfit_medium"
        android:hint="Your Name"
        android:paddingLeft="10dp"
        android:textColor="#272f40"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/shippment_phone_number"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_below="@+id/shippment_name"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_email_pass_bag"
        android:fontFamily="@font/outfit_medium"
        android:hint="Your Phone Number"
        android:inputType="number"
        android:textColor="#272f40"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="@+id/shippment_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shippment_name"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/shippment_address"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_below="@+id/shippment_phone_number"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_email_pass_bag"
        android:fontFamily="@font/outfit_medium"
        android:hint="Your Home Address"
        android:textColor="#272f40"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="@+id/shippment_phone_number"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shippment_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/shippment_city"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_below="@+id/shippment_address"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_email_pass_bag"
        android:fontFamily="@font/outfit_medium"
        android:hint="Your City Name"
        android:textColor="#272f40"
        android:textColorHint="#999999"
        app:layout_constraintEnd_toEndOf="@+id/shippment_address"
        app:layout_constraintStart_toStartOf="@+id/shippment_address"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm_final_order_btn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/main_button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shippment_city"
        app:layout_constraintStart_toStartOf="@+id/shippment_city"
        app:layout_constraintTop_toBottomOf="@+id/shippment_city">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wind" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="44dp"
            android:fontFamily="@font/outfit_medium"
            android:text="Confirm"
            android:textColor="#272f40"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Name"
        android:textColor="#272f40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Year"
        android:textColor="#272f40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/shippment_phone_number" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Phone No."
        android:textColor="#272f40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/shippment_name" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/outfit_medium"
        android:text="Class"
        android:textColor="#272f40"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/shippment_address" />
</androidx.constraintlayout.widget.ConstraintLayout>